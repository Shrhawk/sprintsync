# SprintSync Environment Variables
# Copy this file to .env and fill in your values

# Security
SECRET_KEY=your-super-secret-key-here-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost/sprintsync

# CORS - comma-separated string
ALLOWED_HOSTS_STR=http://localhost:3000,http://localhost:8000

# OpenAI (optional - leave empty to use fallback responses)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Admin User (for seeding database)
ADMIN_EMAIL=admin@sprintsync.com
ADMIN_PASSWORD=secure-admin-password-here
ADMIN_FULL_NAME=Admin User

# Demo User (for testing)
DEMO_EMAIL=demo@sprintsync.com
DEMO_PASSWORD=secure-demo-password-here
DEMO_FULL_NAME=Demo User

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
